<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:vm="using:MainProject.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MainProject.Views.OrderPageView">

	<UserControl.DataContext>
		<vm:OrderPageViewModel/>
	</UserControl.DataContext>

	<StackPanel>
		<ComboBox Classes="ComboBoxStyle">
			<ComboBoxItem>
				<DockPanel LastChildFill="False">
					<TextBlock DockPanel.Dock="Left" Text="Замовлення 1"/>					
				</DockPanel>
			</ComboBoxItem>
			<ComboBoxItem IsHitTestVisible="False">
				<StackPanel>					
					<ListBox >						
						<ListBoxItem Classes="ListBoxItemStyle">Чіабата</ListBoxItem>
						<ListBoxItem Classes="ListBoxItemStyle">Паніні</ListBoxItem>						
					</ListBox>
				</StackPanel>

			</ComboBoxItem>
		</ComboBox>

		<ComboBox Classes="ComboBoxStyle">
			<ComboBoxItem>
				<DockPanel LastChildFill="False">
					<TextBlock DockPanel.Dock="Left" Text="Замовлення 2"/>
				</DockPanel>
			</ComboBoxItem>
			<ComboBoxItem IsHitTestVisible="False">
				<StackPanel>
					<ListBox >
						<ListBoxItem Classes="ListBoxItemStyle">Еспресо</ListBoxItem>
						<ListBoxItem Classes="ListBoxItemStyle">Булка з маком</ListBoxItem>
						<ListBoxItem Classes="ListBoxItemStyle">Булка з маком</ListBoxItem>
						<ListBoxItem Classes="ListBoxItemStyle">Латте</ListBoxItem>
					</ListBox>
				</StackPanel>

			</ComboBoxItem>
		</ComboBox>
		<ComboBox Classes="ComboBoxStyle">
			<ComboBoxItem>
				<DockPanel LastChildFill="False">
					<TextBlock DockPanel.Dock="Left" Text="Замовлення 3"/>
				</DockPanel>
			</ComboBoxItem>
			<ComboBoxItem IsHitTestVisible="False">
				<StackPanel>
					<ListBox >
						<ListBoxItem Classes="ListBoxItemStyle">Допіо</ListBoxItem>
						<ListBoxItem Classes="ListBoxItemStyle">Допіо</ListBoxItem>
						<ListBoxItem Classes="ListBoxItemStyle">Круасан</ListBoxItem>
						<ListBoxItem Classes="ListBoxItemStyle">Круасан</ListBoxItem>
					</ListBox>
				</StackPanel>

			</ComboBoxItem>
		</ComboBox>

	</StackPanel>
	

	
	
	
</UserControl>
